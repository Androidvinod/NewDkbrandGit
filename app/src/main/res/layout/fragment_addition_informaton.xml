<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lv_additionalinfo_parent"
    tools:context=".Fragment.AdditionInformatonFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center|top"
        android:visibility="gone"
        android:id="@+id/lv_addition_pd"
        android:layout_marginTop="60dp"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/progressbar_ui"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="visible"
        android:padding="@dimen/margin10"
        android:id="@+id/recv_addition_information"/>

</FrameLayout>