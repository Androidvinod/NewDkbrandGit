<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv_main_rifles_row"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:layout_margin="@dimen/padding5"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_layout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/padding10"
                    android:layout_marginRight="@dimen/padding10"
                    android:layout_marginTop="@dimen/padding30"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_rifles"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lv_rifles_wishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end|top"
                    android:gravity="top|center">

                    <ImageView
                        android:id="@+id/iv_rifles_add_wishlist"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="@dimen/padding10"
                        android:src="@drawable/like_unative"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_rifles__remove_wishlist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding10"
                        android:src="@drawable/like_ative"
                        android:visibility="gone" />

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_rifles_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:layout_marginTop="@dimen/padding5"
                android:maxLines="2"
                android:lines="2"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.4">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:visibility="visible"
                        android:id="@+id/lv_ds_main_availbleqty"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_item_number_availbleqty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AVAILABLE : "
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text10"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_availbleqty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/grey"
                            android:textSize="10dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lv_msrp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_rifles_msrp_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/msrp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_rifles_msrp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_marginLeft="@dimen/padding5"
                            android:textColor="@color/colorAccent"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lv_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_rifles_lv_price_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price :"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_rifles_lv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_marginLeft="@dimen/padding5"
                            android:textColor="@color/colorAccent"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lv_Specialprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_rifles_Specialprice_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Special Price :"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_rifles_Specialprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_marginLeft="@dimen/padding5"
                            android:textColor="@color/colorAccent"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lv_map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_rifles_map_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MAP :"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_rifles_map"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_marginLeft="@dimen/padding5"
                            android:textColor="@color/colorAccent"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1.6">
                    <LinearLayout
                        android:id="@+id/lv_product_add_to_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_button_fill"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingTop="@dimen/padding5"
                        android:paddingRight="15dp"
                        android:paddingBottom="@dimen/padding5">

                        <TextView
                            android:id="@+id/tv_product_add_to_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="@string/addtocart"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_14" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>